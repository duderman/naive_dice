<!--
Renders an empty form with user name input. That's an entry point for the booking flow.
-->

<h1>
  DON'T MISS YOUR TICKETS
  <br>
  FOR <%= @event.title %>
</h1>

<%= if @remaining_tickets > 0 do %>
  <p>only <%= @remaining_tickets %> <%= pluralize("ticket", @remaining_tickets) %> left</p>

  <%= form_for @conn, Routes.event_event_path(@conn, :reserve, @event.id), fn f -> %>
    <div class="col-md-6 mb-3">
      <label>YOUR NAME </label>
      <br>
      <%= text_input f, :user_name, required: true, class: "form-control", placeholder: "e.g John Doe" %>

      <br>

      <%= submit "Reserve ticket for #{@reservation_time} minutes", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  Sorry. All tickets are gone
<% end %>

<%= guests_link(@event.id) %>
